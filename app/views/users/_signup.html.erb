<div class="ui placeholder segment">
  <%=render "layouts/flashmessages", obj: @session%>
  <div class="ui column very relaxed stackable grid">
    <div class="column">
      <div class="ui form">

      <%= form_for(:session, html: {role: "form"}, url: login_path) do |f| %>
        <div class="field">
         <%= f.label :username, "Username" %>
          <div class="ui left icon input">
            <%= f.text_field :username, placeholder: "Create a Username" %>
            <i class="user icon"></i>
          </div>
        </div>

        <div class="field">
          <%= f.label :email, "Email" %>
          <div class="ui left icon input">
            <%= f.email_field :email, placeholder: "Enter your email address" %>
            <i class="lock icon"></i>
          </div>
        </div>

         <div class="field">
          <%= f.label :password, "Password" %>
          <div class="ui left icon input">
            <%= f.password_field :password, placeholder: "Choose a Password" %>
            <i class="lock icon"></i>
          </div>
        </div>
        <%= f.button "Signup", class: "ui teal submit button" %>
          <div class="field">
            <div class="ui checkbox">
               <input type="checkbox" tabindex="0" class="hidden">
               <label>I agree to the Terms and Conditions</label>
             </div>
         </div>
          <div class="mb-3">
            <%= link_to '[ Cancel and return Home ]', root_path, class: "column text-info" %>
         </div>
      <% end %>
      </div>
    </div>
        
    </div>
  </div>
  
</div>