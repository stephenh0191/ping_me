<div class="ui placeholder segment">
  <%=render "layouts/flashmessages", obj: @user%>
  <div class="ui column very relaxed stackable grid">
    <div class="column">
      <div class="ui form">
      <%= form_with(model: @user, local: true) do |f| %>
         <% if logged_in? %>     
    <div class="field">
          <%= f.label(@user.new_record? ? "Upload Profile Pic" : "Update Profile Pic" ) %>
               <div class="ui left icon input">
                  <%= f.file_field :picture, placeholder: "Add a Profile picture" %>
        </div>
        <% if logged_in? %>     

      <%= form_with(model: @usersinfo, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
    
        <div class="field">
          <%= f.label :title, "Title" %>
          <div class="ui left icon input">
            <%= f.text_field :title, placeholder: "Enter your Title" %>
            <i class="lock icon"></i>
          </div>
        </div>
       <div class="field">
          <%= f.label :description, "Discribe yourself" %>
          <div class="ui left icon input">
            <%= f.text_field :description, placeholder: "Discribe yourself" %>
            <i class="lock icon"></i>
          </div>
        </div>

        <div class="field">
          <%= f.label :contactinfo, "Contact" %>
          <div class="ui left icon input">
            <%= f.text_field :contactinfo, placeholder: "Enter your contact information" %>
            <i class="lock icon"></i>
          </div>


            <div class="field">
          <%= f.label :from, "Where are you from?" %>
          <div class="ui left icon input">
            <%= f.text_field :title, placeholder: "Where are you from" %>
            <i class="lock icon"></i>
          </div>
        </div>

        </div>
        <div class="field">
          <%= f.label :Jobtitle, "Job Title" %>
          <div class="ui left icon input">
            <%= f.text_field :Jobtitle, placeholder: "Enter your Job Title" %>
            <i class="lock icon"></i>
          </div>
        </div>

        <div class="field">
          <%= f.label :company, "Who do you work for?" %>
          <div class="ui left icon input">
            <%= f.text_field :company, placeholder: "Enter Company" %>
            <i class="lock icon"></i>
          </div>
        </div>

        <div class="field">
          <%= f.label :eduction, "List your Eduction" %>
          <div class="ui left icon input">
            <%= f.text_field :eduction, placeholder: "Enter your Eduction" %>
            <i class="lock icon"></i>
          </div>
        </div>

          <div class="field">
          <%= f.label :passions, "What are your Passions?" %>
          <div class="ui left icon input">
            <%= f.text_field :passions, placeholder: "Enter your passions" %>
            <i class="lock icon"></i>
          </div>
        </div>
        
        <%end%>
        <div class="field">
         <%= f.label :username, "Username" %>
          <div class="ui left icon input">
            <%= f.text_field :username, placeholder: "Create a Username" %>
            <i class="user icon"></i>
          </div>
        </div>

        <div class="field">
          <%= f.label :email, "Email" %>
          <div class="ui left icon input">
            <%= f.email_field :email, placeholder: "Enter your email address" %>
            <i class="lock icon"></i>
          </div>
        </div>

         <div class="field">
          <%= f.label :password, "Password" %>
          <div class="ui left icon input">
            <%= f.password_field :password, placeholder: "Choose a Password" %>
            <i class="lock icon"></i>
          </div>
        </div>
          

        <div class="form-group row justify-content-center">
        <%= f.submit(@user.new_record? ? "Sign up" : "Update Account", class:  "ui inverted blue button") %>
        </div>
      <% end %>

        <%= link_to "Delete Account", user_path(current_user), 
          class: "ui inverted red button", method: :delete, data: { confirm: "Are you sure?" } %> 
          <%end%>
          <div class="field">
            <div class="ui checkbox">
               <input type="checkbox" tabindex="0" class="hidden">
               <label>I agree to the Terms and Conditions</label>
                <div class="middle aligned column">
                   <%= link_to "Cancel", root_path,  class: "ui teal button" %>
              </div>
         </div>
      <% end %>
      
      </div>
    </div>
        
    </div>
  </div>
</div>