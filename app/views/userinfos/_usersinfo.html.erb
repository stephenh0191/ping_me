 <div class="container">
  <% @userinfos.each do |userinfo| %>
            <% if userinfo.user.username %>
               <%= link_to userinfo.user, user_path(userinfo.user) %>
            <% end %>
          <div class="card-body">
        <h5 class="card-title"><%= link_to userinfo.title, userinfo_path(usersinfo), class: "text-success" %></h5>
            <p class="card-text"><%= truncate(usersinfo.description, length: 100) %></p>
            <%= link_to "View", userinfo_path(userinfo), class: "btn btn-outline-success" %>
            <% if logged_in? && (userinfo.user == current_user || current_user.admin?) %>
              <%= link_to "Edit",   class: "btn btn-outline-info" %>
              <%= link_to "Delete", class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure?"} %>
            <% end %>
          </div>
  <% end %>
</div>
