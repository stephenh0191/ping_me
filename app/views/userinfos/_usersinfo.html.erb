<div class="ui placeholder segment">
  <%=render "layouts/flashmessages", obj: @userinfo%>
  <div class="ui column very relaxed stackable grid">
    <div class="column">
      <div class="ui form"> 
  <% @userinfos.each do |userinfo| %>
          <div class="card-body">
             <h5 class="card-title"> 
            <%= link_to userinfos.title, userinfos_path(userinfo), class: "text-success" %></h5>
            <p class="card-text"><%= truncate(userinfo.description, length: 100) %></p>
            <%= link_to userinfos.user_id, userinfos_path(userinfo), class: "text-success" %></h5>
            <%= link_to userinfos.eduction, userinfos_path(userinfo), class: "text-success" %></h5>
            <%= link_to userinfos.from, userinfos_path(userinfo), class: "text-success" %></h5>
            <%= link_to userinfos.contactinfo, userinfos_path(userinfo), class: "text-success" %></h5>
            <%= link_to userinfos.company, userinfos_path(userinfo), class: "text-success" %></h5>
            <%= link_to userinfos.passions, userinfos_path(userinfo), class: "text-success" %></h5>
            <%= link_to userinfos.Jobtitle, userinfos_path(userinfo), class: "text-success" %></h5>
          </div>
  <% end %>
</div>
