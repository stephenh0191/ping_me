      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.file_field :picture , accept: "image/jpeg, image/gif, image/png"%>
  </div>

 
