<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
     
      
      <%= form_with(model: @userinfo, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        
        <div class="field">
          <%= f.label :title, "Title" %>
          <div class="ui left icon input">
            <%= f.text_field :title, placeholder: "Enter your Title" %>
            <i class="lock icon"></i>
          </div>
        </div>
       <div class="field">
          <%= f.label :description, "Discribe yourself" %>
          <div class="ui left icon input">
            <%= f.text_field :description, placeholder: "Discribe yourself" %>
            <i class="lock icon"></i>
          </div>
        </div>

        <div class="field">
          <%= f.label :contactinfo, "Contact" %>
          <div class="ui left icon input">
            <%= f.text_field :contactinfo, placeholder: "Enter your contact information" %>
            <i class="lock icon"></i>
          </div>


            <div class="field">
          <%= f.label :from, "Where are you from?" %>
          <div class="ui left icon input">
            <%= f.text_field :title, placeholder: "Where are you from" %>
            <i class="lock icon"></i>
          </div>
        </div>

        </div>
        <div class="field">
          <%= f.label :Jobtitle, "Job Title" %>
          <div class="ui left icon input">
            <%= f.text_field :Jobtitle, placeholder: "Enter your Job Title" %>
            <i class="lock icon"></i>
          </div>
        </div>

        <div class="field">
          <%= f.label :company, "Who do you work for?" %>
          <div class="ui left icon input">
            <%= f.text_field :company, placeholder: "Enter Company" %>
            <i class="lock icon"></i>
          </div>
        </div>

        <div class="field">
          <%= f.label :eduction, "List your Eduction" %>
          <div class="ui left icon input">
            <%= f.text_field :eduction, placeholder: "Enter your Eduction" %>
            <i class="lock icon"></i>
          </div>
        </div>

          <div class="field">
          <%= f.label :passions, "What are your Passions?" %>
          <div class="ui left icon input">
            <%= f.text_field :passions, placeholder: "Enter your passions" %>
            <i class="lock icon"></i>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit class: "ui teal button" %>
        </div>
      <% end %>
    </div>
    <div class="middle aligned column">
                   <%= link_to "Cancel", user_path,  class: "ui teal button" %>
    </div>
  </div>
</div>

    